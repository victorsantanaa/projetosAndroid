<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_padding_16_dp"
    tools:context=".kotlin.views.DetailsActivity">

    <TextView
        android:id="@+id/text_modelo_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/modelo"
        />

    <TextView
        android:id="@+id/text_modelo_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_modelo_1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/modelo"
        />

    <TextView
        android:id="@+id/text_cavalos_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/text_modelo_2"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/cavalos"
        />

    <TextView
        android:id="@+id/text_cavalos_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_cavalos_1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/cavalos"
        />

    <TextView
        android:id="@+id/text_preco_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/text_cavalos_2"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/preco"
        />

    <TextView
        android:id="@+id/text_preco_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_preco_1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/preco"
        />

</android.support.constraint.ConstraintLayout>